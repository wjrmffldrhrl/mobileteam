<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/study_txt_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="130dp"
        android:gravity="center"
        android:text="YY:MM:DD"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <Chronometer
        android:id="@+id/study_timer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:textColor="#ffff"
        android:textSize="90dp"
        android:shadowRadius="5.0"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowColor="#000000" />
    <Button
        android:id="@+id/study_bt_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="165dp"
        android:text="Reset" />


    <TextView
        android:id="@+id/study_txt_schedule"
        android:layout_width="800dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shadow"
        android:text="체크리스트"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="230dp"
        android:orientation="horizontal"
        android:background="@drawable/d">

        <ImageButton

            android:id="@+id/study_bt_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/study_bt_note"
            android:layout_marginStart="19dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/face_off" />

        <ImageButton

            android:id="@+id/study_bt_calendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/study_bt_note"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/calendar" />


        <ImageButton

            android:id="@+id/study_bt_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"

            android:src="@drawable/note" />

        <ImageButton

            android:id="@+id/study_bt_dictionary"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/study_bt_note"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#ffffffff"
            android:scaleType="fitXY"
            android:src="@drawable/dictionary_img" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/study_bt_note"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/setting" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/study_bt_face"
            android:layout_marginStart="30dp"
            android:text="얼굴인식"
            android:textColor="#000000"
            android:textSize="17dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/study_bt_note"
            android:layout_centerHorizontal="true"
            android:text="메모"
            android:textColor="#000000"
            android:textSize="17dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/note_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="40dp"
            android:text="영어사전"
            android:textColor="#000000"
            android:textSize="17dp"
            android:visibility="invisible" />
        >


    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adid_xml"></com.google.android.gms.ads.AdView>


</RelativeLayout>